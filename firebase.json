{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "doulala"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        ".github",
        ".env",
        "*.pyc",
        "__pycache__"
      ],
      "runtime": "python310"
    }
  ]
} 